
	
	
	<table class="table table-hover admin" >
		<thead>
			<tr>
				<th>程序名</th>
				<th>类别</th>
				<th>管理选项</th>
				<th>分享者</th>
				<th>发布时间</th>
			</tr>
		</thead>
		<tbody>
			<% @apps.each do |app| %>
				<tr>
					<td>
						<%= render_app_status(app) %>
						<%= link_to app.title, admin_app_path(app) %>
					</td>
					<td><%= app.category_id %></td>
					<td>
						<%= link_to("Edit", edit_admin_app_path(app)) %>
						<%= link_to("Destroy", admin_app_path(app), method: :delete, data: { confirm: "Are you sure?"}) %>
						<%= link_to("Publish", publish_admin_app_path(app), method: :post, class: "btn btn-xs btn-default") %>
						<%= link_to("Hide", hide_admin_app_path(app), method: :post, class: "btn btn-xs btn-default") %>
					</td>
					<td><%= app.user.email %></td>
					<td><%= app.created_at.strftime("%Y-%m-%d") %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
