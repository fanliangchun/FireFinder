<div class="col-md-4 col-md-offset-4">
<div class="container-fluid">
<h2>欢迎回来</h2>
<hr>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, label: "您的邮箱", required: false, autofocus: true %>
    <%= f.input :password, label: "您的密码", required: false %>
    <%= f.input :remember_me, label: "记住我", as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "登入", class: "btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>